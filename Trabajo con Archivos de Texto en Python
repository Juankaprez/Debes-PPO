# Abrir el archivo en modo escritura ('w')
archivo = open("my_notes.txt", "w")

# Escribir al menos tres líneas
archivo.write("Esta es mi primera nota.\n")
archivo.write("La única forma de aprender un nuevo lenguaje de programación es escribir programas en él.\n")
archivo.write("Hay que trabajar, hay que aprender, hay que comer, hay que descansar, y también hay que jugar; esas son las bases del entrenamiento del camino de la tortuga para tener una buena condición.\n")

# Cerrar el archivo después de escribir
archivo.close()
# Abrir el archivo en modo lectura ('r')
archivo = open("my_notes.txt", "r")

# Leer cada línea una por una usando readline()
linea = archivo.readline()
while linea != "":
    print(linea.strip())  # strip() elimina el salto de línea final
    linea = archivo.readline()

# Escribir en el archivo usando 'with'
with open("my_notes.txt", "w") as archivo:
    archivo.write("Esta es mi primera nota.\n")
    archivo.write("Recuerda practicar Python todos los días.\n")
    archivo.write("No olvidar tomar descansos y beber agua.\n")
